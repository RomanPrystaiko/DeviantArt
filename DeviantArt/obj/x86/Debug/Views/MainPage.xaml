<Page x:ConnectionId='1'
    x:Class="DeviantArt.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:DeviantArt"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:data="using:deviantArt.Shared.Models"
    xmlns:vm="using:deviantArt.Shared.ViewModels"
    mc:Ignorable="d">

    <Page.Resources>
        <Style TargetType="ListBoxItem" x:Key="ListBoxItemStyle" >
            <Setter Property="Height" Value="50"/>
        </Style>
        <Style TargetType="TextBlock" x:Key="TextBlockStyle">
            <Setter Property="FontFamily" Value="Arial"/>
            <Setter Property="FontSize" Value="19"/>
            <Setter Property="FontWeight" Value="SemiLight"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Foreground" Value="#337287"/>
        </Style>
    </Page.Resources>

    <Grid x:ConnectionId='2' Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" x:Name="rootGridView">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" Height="70" Background="#637768">
            <Border CornerRadius="5" BorderThickness="2" BorderBrush="Black" Margin="1,0,0,0" Opacity="0.7">
                <Image  Source="../Assets/DeviantImages/DartAnimation.gif" Height="70" />
            </Border>
            <Image  Source="../Assets/DeviantImages/DeviantLogoType.png" Height="40" Margin="10,0,0,0"/>
        </StackPanel>
        <StackPanel Grid.Row="1" Orientation="Horizontal" Height="50" Background="#3d4f42" >
            <Border CornerRadius="5" BorderThickness="2" Height="50" BorderBrush="#94a98f">
                <HyperlinkButton x:ConnectionId='14' x:Name="_hamburgerButton" Height="50" Background="#d7e2d4" VerticalAlignment="Center"
                                 Width="105" HorizontalContentAlignment="Right"                               >
                    <TextBlock Foreground="#94a98f" Text="&#xE700;" FontFamily="Segoe MDL2 Assets" Margin="0,0,10,0"
                               VerticalAlignment="Center" FontSize="26"  FontWeight="ExtraBold"/>
                </HyperlinkButton>
            </Border>
        </StackPanel>
        <SplitView x:ConnectionId='3' x:Name="deviantArtSplitView" Grid.Row="2" Background="#ccd9c8" OpenPaneLength="300" DisplayMode="Inline" IsPaneOpen="True">
            <SplitView.Pane>
                <Grid Background="#dbe3d5" BorderThickness="1" BorderBrush="#a8baa7">
                    <ListBox x:ConnectionId='7' x:Name="imageCategoriesListBox" Background="#dbe3d5" 
                                                                                                
                                                                                        
                                                                     >
                        <ListBox.ItemTemplate>
                            <DataTemplate                               >
                                <StackPanel x:ConnectionId='8' Orientation="Horizontal" Margin="-10">
                                    <TextBlock x:ConnectionId='9' FontFamily="Segoe MDL2 Assets"                          Margin="20,10,20,10" 
                                               Style="{StaticResource TextBlockStyle}"/>
                                    <TextBlock x:ConnectionId='10'  Style="{StaticResource TextBlockStyle}"                         />
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>
            </SplitView.Pane>
            <SplitView.Content>
                <GridView x:ConnectionId='11' x:Name="GridView" ShowsScrollingPlaceholders="True"                             
                                                                   
                                                                                              
                                  IsItemClickEnabled="True">
                    <GridView.ItemTemplate>
                        <DataTemplate                            >
                            <Grid x:ConnectionId='12'>
                                <Image x:ConnectionId='13' Width="450" Height="450" Margin="10"                      />
                            </Grid>
                        </DataTemplate>
                    </GridView.ItemTemplate>
                </GridView>
            </SplitView.Content>
        </SplitView>
        <Popup x:ConnectionId='4' Grid.Row="2" x:Name="StandardPopup" VerticalAlignment="Center" HorizontalAlignment="Center" IsOpen="False">
            <Border BorderBrush="Green" CornerRadius="7" Background="#d7e2d4" 
                BorderThickness="2" Width="300" Height="300">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBlock Text="Image is not downloadable" TextWrapping="Wrap" FontSize="24.667" Margin="1" Foreground="Green" HorizontalAlignment="Center"/>
                    <HyperlinkButton x:ConnectionId='6' Content="Close"                     HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>
        </Popup>
        <ProgressRing x:ConnectionId='5' x:Name="ProgressRing" Grid.RowSpan="3" Visibility="Visible" Foreground="Black" 
                      Width="80" Height="80" IsActive="True" VerticalAlignment="Center" FontWeight="ExtraBold"  HorizontalAlignment="Center"/>
    </Grid>
</Page>

